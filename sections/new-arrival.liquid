{% comment %}
  Section: Split Hero Banner
  Description: Two images side by side with separate content, 10px gap between them
{% endcomment %}

<style>
  /* Split Hero Banner Styles */
  .split-hero-banner-{{ section.id }} {
    display: grid;
    gap: 10px;
    grid-template-columns: 1fr 1fr;
    max-width: 100%;
    margin: 0 auto;
    
    /* Section padding */
    padding-top: {{ section.settings.section_padding_top_desktop }}px;
    padding-bottom: {{ section.settings.section_padding_bottom_desktop }}px;
    padding-left: {{ section.settings.section_padding_left_desktop }}px;
    padding-right: {{ section.settings.section_padding_right_desktop }}px;
  }

  .split-hero__item {
    position: relative;
    min-height: {{ section.settings.image_height_desktop }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .split-hero__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .split-hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  /* Dark overlay always visible on both images */
  .split-hero__media::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  /* Left image overlay */
  .split-hero__item--left .split-hero__media::before {
    background-color: rgba(0, 0, 0, {{ section.settings.left_image_overlay_opacity | divided_by: 100.0 }});
  }

  /* Right image overlay */
  .split-hero__item--right .split-hero__media::before {
    background-color: rgba(0, 0, 0, {{ section.settings.right_image_overlay_opacity | divided_by: 100.0 }});
  }

  .split-hero__content {
    position: relative;
    z-index: 2;
    padding: 2rem;
    text-align: center;
    max-width: 90%;
  }

  /* Left side styles (Image 1) */
  .split-hero__item--left .split-hero__heading-1 {
    font-size: {{ section.settings.left_heading_1_font_size }}px;
    font-weight: {{ section.settings.left_heading_1_font_weight }};
    letter-spacing: {{ section.settings.left_heading_1_letter_spacing | divided_by: 100.0 }}em;
    text-transform: {{ section.settings.left_heading_1_text_transform }};
    margin: 0 0 0.5rem 0;
    line-height: 1.1;
    color: {{ section.settings.left_heading_1_color }};
  }

  .split-hero__item--left .split-hero__heading-2 {
    font-size: {{ section.settings.left_heading_2_font_size }}px;
    font-weight: {{ section.settings.left_heading_2_font_weight }};
    font-style: {{ section.settings.left_heading_2_font_style }};
    margin: 0 0 {{ section.settings.left_button_spacing }}px 0;
    line-height: 1.1;
    color: {{ section.settings.left_heading_2_color }};
  }

  /* Right side styles (Image 2) */
  .split-hero__item--right .split-hero__heading-3 {
    font-size: {{ section.settings.right_heading_font_size }}px;
    font-weight: {{ section.settings.right_heading_font_weight }};
    letter-spacing: {{ section.settings.right_heading_letter_spacing | divided_by: 100.0 }}em;
    text-transform: {{ section.settings.right_heading_text_transform }};
    margin: 0 0 1rem 0;
    line-height: 1.1;
    color: {{ section.settings.right_heading_color }};
  }

  .split-hero__item--right .split-hero__subtext {
    font-size: {{ section.settings.right_subtext_font_size }}px;
    font-weight: {{ section.settings.right_subtext_font_weight }};
    margin: 0 0 {{ section.settings.right_button_spacing }}px 0;
    line-height: 1.5;
    color: {{ section.settings.right_subtext_color }};
    max-width: 400px;
  }

  /* Button styles */
  .split-hero__button {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    text-transform: {{ section.settings.button_text_transform }};
    letter-spacing: {{ section.settings.button_letter_spacing | divided_by: 100.0 }}em;
    font-weight: {{ section.settings.button_font_weight }};
    font-size: {{ section.settings.button_font_size }}px;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    min-width: 200px;
  }

  .split-hero__button--primary {
    background-color: {{ section.settings.left_button_bg_color }};
    color: {{ section.settings.left_button_text_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    border: {{ section.settings.left_button_border_width }}px solid {{ section.settings.left_button_border_color }};
  }

  .split-hero__button--primary:hover {
    background-color: {{ section.settings.left_button_hover_bg_color }};
    color: {{ section.settings.left_button_hover_text_color }};
    border-color: {{ section.settings.left_button_hover_border_color }};
    transform: translateY(-2px);
  }

  .split-hero__button--secondary {
    background-color: {{ section.settings.right_button_bg_color }};
    color: {{ section.settings.right_button_text_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    border: {{ section.settings.right_button_border_width }}px solid {{ section.settings.right_button_border_color }};
  }

  .split-hero__button--secondary:hover {
    background-color: {{ section.settings.right_button_hover_bg_color }};
    color: {{ section.settings.right_button_hover_text_color }};
    border-color: {{ section.settings.right_button_hover_border_color }};
    transform: translateY(-2px);
  }

  /* Responsive Styles */
  @media screen and (max-width: 749px) {
    .split-hero-banner-{{ section.id }} {
      grid-template-columns: 1fr;
      gap: 10px;
      
      /* Mobile padding */
      padding-top: {{ section.settings.section_padding_top_mobile }}px;
      padding-bottom: {{ section.settings.section_padding_bottom_mobile }}px;
      padding-left: {{ section.settings.section_padding_left_mobile }}px;
      padding-right: {{ section.settings.section_padding_right_mobile }}px;
    }

    .split-hero__item {
      min-height: {{ section.settings.image_height_mobile }}px;
    }

    .split-hero__item--left .split-hero__heading-1 {
      font-size: {{ section.settings.left_heading_1_font_size_mobile }}px;
    }

    .split-hero__item--left .split-hero__heading-2 {
      font-size: {{ section.settings.left_heading_2_font_size_mobile }}px;
    }

    .split-hero__item--right .split-hero__heading-3 {
      font-size: {{ section.settings.right_heading_font_size_mobile }}px;
    }

    .split-hero__item--right .split-hero__subtext {
      font-size: {{ section.settings.right_subtext_font_size_mobile }}px;
      padding: 0 1rem;
    }

    .split-hero__button {
      padding: {{ section.settings.button_padding_vertical_mobile }}px {{ section.settings.button_padding_horizontal_mobile }}px;
      font-size: {{ section.settings.button_font_size_mobile }}px;
      min-width: 180px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .split-hero__item {
      min-height: {{ section.settings.image_height_tablet }}px;
    }
  }

  /* Ensure full width on mobile */
  @media screen and (max-width: 749px) {
    .split-hero-banner-{{ section.id }} {
      width: 100%;
    }
  }
</style>

<div class="split-hero-banner split-hero-banner-{{ section.id }}">
  <!-- Left Image -->
  <div class="split-hero__item split-hero__item--left">
    {%- if section.settings.image_left != blank -%}
      <div class="split-hero__media">
        {%- liquid
          assign image_height_left = section.settings.image_left.width | divided_by: section.settings.image_left.aspect_ratio
          assign sizes = "50vw"
        -%}
        {{ section.settings.image_left | image_url: width: 2000 | image_tag:
          loading: 'lazy',
          width: section.settings.image_left.width,
          height: image_height_left,
          class: 'split-hero__image',
          sizes: sizes,
          widths: '375, 550, 750, 1100, 1500, 2000'
        }}
      </div>
    {%- else -%}
      <div class="split-hero__media">
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {%- endif -%}

    <div class="split-hero__content">
      {%- if section.settings.heading_left_1 != blank -%}
        <h2 class="split-hero__heading-1">
          {{ section.settings.heading_left_1 }}
        </h2>
      {%- endif -%}

      {%- if section.settings.heading_left_2 != blank -%}
        <h3 class="split-hero__heading-2">
          {{ section.settings.heading_left_2 }}
        </h3>
      {%- endif -%}

      {%- if section.settings.button_label_left != blank -%}
        <a {% if section.settings.button_link_left != blank %}href="{{ section.settings.button_link_left }}"{% endif %}
          class="split-hero__button split-hero__button--primary"
          {% if section.settings.button_link_left == blank %}aria-disabled="true"{% endif %}>
          {{ section.settings.button_label_left | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>

  <!-- Right Image -->
  <div class="split-hero__item split-hero__item--right">
    {%- if section.settings.image_right != blank -%}
      <div class="split-hero__media">
        {%- liquid
          assign image_height_right = section.settings.image_right.width | divided_by: section.settings.image_right.aspect_ratio
          assign sizes = "50vw"
        -%}
        {{ section.settings.image_right | image_url: width: 2000 | image_tag:
          loading: 'lazy',
          width: section.settings.image_right.width,
          height: image_height_right,
          class: 'split-hero__image',
          sizes: sizes,
          widths: '375, 550, 750, 1100, 1500, 2000'
        }}
      </div>
    {%- else -%}
      <div class="split-hero__media">
        {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {%- endif -%}

    <div class="split-hero__content">
      {%- if section.settings.heading_right != blank -%}
        <h3 class="split-hero__heading-3">
          {{ section.settings.heading_right }}
        </h3>
      {%- endif -%}

      {%- if section.settings.subtext_right != blank -%}
        <p class="split-hero__subtext">
          {{ section.settings.subtext_right }}
        </p>
      {%- endif -%}

      {%- if section.settings.button_label_right != blank -%}
        <a {% if section.settings.button_link_right != blank %}href="{{ section.settings.button_link_right }}"{% endif %}
          class="split-hero__button split-hero__button--secondary"
          {% if section.settings.button_link_right == blank %}aria-disabled="true"{% endif %}>
          {{ section.settings.button_label_right | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

