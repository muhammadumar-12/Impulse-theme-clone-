{{ 'hero-banner.css' | asset_url | stylesheet_tag }}

<style>
  .hero-banner-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_right }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_left }}px;
    --overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .hero-banner-{{ section.id }} .hero-banner__subheading {
    font-size: {{ section.settings.subheading_font_size }}px;
    font-weight: {{ section.settings.subheading_font_weight }};
    margin-bottom: {{ section.settings.subheading_spacing }}px;
    color: {{ section.settings.text_color }};
  }

  .hero-banner-{{ section.id }} .hero-banner__heading {
    font-size: {{ section.settings.heading_font_size }}px;
    font-weight: {{ section.settings.heading_font_weight }};
    margin-bottom: {{ section.settings.heading_spacing }}px;
    color: {{ section.settings.text_color }};
  }

  .hero-banner-{{ section.id }} .hero-banner__description {
    font-size: {{ section.settings.description_font_size }}px;
    font-weight: {{ section.settings.description_font_weight }};
    max-width: {{ section.settings.text_max_width }}px;
    margin-bottom: {{ section.settings.description_spacing }}px;
    color: {{ section.settings.text_color }};
  }

  @media screen and (max-width: 749px) {
    .hero-banner-{{ section.id }} {
      padding: {{ section.settings.padding_top_mobile }}px {{ section.settings.padding_right_mobile }}px {{ section.settings.padding_bottom_mobile }}px {{ section.settings.padding_left_mobile }}px;
    }

    .hero-banner-{{ section.id }} .hero-banner__subheading {
      font-size: {{ section.settings.subheading_font_size_mobile }}px;
    }

    .hero-banner-{{ section.id }} .hero-banner__heading {
      font-size: {{ section.settings.heading_font_size_mobile }}px;
    }

    .hero-banner-{{ section.id }} .hero-banner__description {
      font-size: {{ section.settings.description_font_size_mobile }}px;
    }
  }
</style>

<div class="hero-banner hero-banner-{{ section.id }} {% if section.settings.full_width %}hero-banner--full-width{% endif %}">
  <div class="hero-banner__container {% unless section.settings.full_width %}page-width{% endunless %}">
    <div class="hero-banner__inner">

      {% if section.settings.image %}
        <div class="hero-banner__image-container">
          <img
            src="{{ section.settings.image | image_url: width: 2000 }}"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            class="hero-banner__image"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
          >
        </div>
      {% else %}
        <div class="hero-banner__image-container">
          {{ 'lifestyle-2' | placeholder_svg_tag: 'hero-banner__image placeholder' }}
        </div>
      {% endif %}

      <div class="hero-banner__content hero-banner__content--{{ section.settings.text_alignment }}">
        <div class="hero-banner__text-container">

          {% if section.settings.subheading != blank %}
            <div class="hero-banner__subheading">{{ section.settings.subheading }}</div>
          {% endif %}

          {% if section.settings.heading != blank %}
            <h2 class="hero-banner__heading">{{ section.settings.heading }}</h2>
          {% endif %}

          {% if section.settings.description != blank %}
            <div class="hero-banner__description">{{ section.settings.description }}</div>
          {% endif %}

        </div>
      </div>

    </div>
  </div>
</div>




