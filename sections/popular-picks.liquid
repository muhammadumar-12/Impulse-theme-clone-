<section
  class="popular-picks"
  id="PopularPicks-{{ section.id }}"
>
  {% if section.settings.heading != blank %}
    <h2 class="popular-picks__heading">
      {{ section.settings.heading }}
    </h2>
  {% endif %}

  {% assign collection = collections[section.settings.collection] %}

  {% if collection != blank %}
    <div class="popular-picks__track">

      {% for product in collection.products limit: 10 %}
        <div class="popular-picks__item">
          <a href="{{ product.url }}" class="popular-picks__image-wrapper">
            {% if product.featured_image %}
              {{ product.featured_image | image_url: width: 600 | image_tag: loading: 'lazy' }}
            {% endif %}
          </a>

          <div class="popular-picks__info">
            <h3 class="popular-picks__title">
              {{ product.title }}
            </h3>

            <div class="popular-picks__price">
              {{ product.price | money }}
            </div>
          </div>
        </div>
      {% endfor %}

    </div>
  {% else %}
    <p style="text-align:center;">Please select a collection</p>
  {% endif %}
</section>

<style>
/* ================================
   POPULAR PICKS â€“ DESKTOP
================================ */

.popular-picks {
  padding: 5rem 0;
}

.popular-picks__heading {
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  font-size: 1.4rem;
  margin-bottom: 4rem;
}

.popular-picks__track {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 3rem;
  padding: 0 4rem;
}

.popular-picks__item {
  text-align: center;
}

.popular-picks__image-wrapper {
  display: block;
  background: #f3f3f3;
  overflow: hidden;
}

.popular-picks__image-wrapper img {
  width: 100%;
  height: auto;
  transition: transform 0.4s ease;
}

.popular-picks__image-wrapper:hover img {
  transform: scale(1.05);
}

.popular-picks__title {
  font-size: 1.3rem;
  margin-top: 1.2rem;
}

.popular-picks__price {
  font-size: 1.2rem;
  margin-top: 0.4rem;
}

/* ================================
   MOBILE / TABLET (CAROUSEL)
================================ */

@media screen and (max-width: 786px) {
  .popular-picks__track {
    display: flex;
    gap: 2rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding: 0 1.5rem;
  }

  .popular-picks__item {
    min-width: 48%;
    scroll-snap-align: start;
  }

  .popular-picks__track::-webkit-scrollbar {
    display: none;
  }
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('#PopularPicks-{{ section.id }}');
    if (!section) return;

    const track = section.querySelector('.popular-picks__track');

    let isDown = false;
    let startX;
    let scrollLeft;

    track.addEventListener('mousedown', e => {
      isDown = true;
      startX = e.pageX - track.offsetLeft;
      scrollLeft = track.scrollLeft;
    });

    track.addEventListener('mouseleave', () => isDown = false);
    track.addEventListener('mouseup', () => isDown = false);

    track.addEventListener('mousemove', e => {
      if (!isDown) return;
      e.preventDefault();
      const x = e.pageX - track.offsetLeft;
      const walk = (x - startX) * 1.5;
      track.scrollLeft = scrollLeft - walk;
    });
  });
</script>

{% schema %}
{
  "name": "Popular Picks",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "POPULAR PICKS"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select collection"
    }
  ],
  "presets": [
    {
      "name": "Popular Picks"
    }
  ]
}
{% endschema %}
