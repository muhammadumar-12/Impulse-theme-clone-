              </li>
            {% endif %}
          </ul>
          
          {% if section.settings.show_social and section.settings.show_country %}
            <div class="header-utility-bar__separator"></div>
          {% endif %}
        {% endif %}

        {% if section.settings.show_country %}
          <div class="country-selector">
            <button class="country-selector__button" aria-expanded="false" aria-controls="country-dropdown">
              <span class="country-selector__current">
                {%- if localization.country and localization.currency -%}
                  {{ localization.country.name }} ({{ localization.currency.iso_code }} {{ localization.currency.symbol }})
                {%- else -%}
                  {{ section.settings.default_country }}
                {%- endif -%}
              </span>
            </button>
            
            <div class="country-selector__dropdown" id="country-dropdown">
              <!-- Country options will be populated by JavaScript -->
              <div class="country-selector__item active">
                <span>Pakistan</span>
                <span class="country-selector__currency">USD $</span>
              </div>
              <div class="country-selector__item">
                <span>United States</span>
                <span class="country-selector__currency">USD $</span>
              </div>
              <div class="country-selector__item">
                <span>United Kingdom</span>
                <span class="country-selector__currency">GBP £</span>
              </div>
              <div class="country-selector__item">
                <span>Canada</span>
                <span class="country-selector__currency">CAD $</span>
              </div>
            </div>
          </div>
        {% endif %}
      </div>

    </div>
  </div>
</div>

<script>
  // Country selector functionality
  document.addEventListener('DOMContentLoaded', function() {
    const countryButton = document.querySelector('.country-selector__button');
    const countryDropdown = document.querySelector('.country-selector__dropdown');
    
    if (countryButton && countryDropdown) {
      // Toggle dropdown on button click
      countryButton.addEventListener('click', function(e) {
        e.stopPropagation();
        const isExpanded = countryButton.getAttribute('aria-expanded') === 'true';
        countryButton.setAttribute('aria-expanded', !isExpanded);
        countryDropdown.style.display = isExpanded ? 'none' : 'block';
      });
      
      // Handle country selection
      countryDropdown.querySelectorAll('.country-selector__item').forEach(item => {
        item.addEventListener('click', function() {
          const country = this.querySelector('span:first-child').textContent;
          const currency = this.querySelector('.country-selector__currency').textContent;
          
          // Update button text
          document.querySelector('.country-selector__current').textContent = `${country} (${currency})`;
          
          // Update active state
          countryDropdown.querySelectorAll('.country-selector__item').forEach(i => {
            i.classList.remove('active');
          });
          this.classList.add('active');
          
          // Close dropdown
          countryButton.setAttribute('aria-expanded', 'false');
          countryDropdown.style.display = 'none';
        });
      });
      
      // Close dropdown when clicking outside
      document.addEventListener('click', function(e) {
        if (!countryButton.contains(e.target) && !countryDropdown.contains(e.target)) {
          countryButton.setAttribute('aria-expanded', 'false');
          countryDropdown.style.display = 'none';
        }
      });
    }
  });
</script>

{% schema %}
{
  "name": "Header Utility Bar",
  "class": "header-utility-section",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Left menu",
      "info": "Leave empty to use default menu items"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social media icons",
      "default": true
    },
    {
      "type": "url",
      "id": "facebook_link",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_link",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "pinterest_link",
      "label": "Pinterest URL"
    },
    {
      "type": "checkbox",
      "id": "show_country",
      "label": "Show country/currency selector",
      "default": true
    },
    {
      "type": "text",
      "id": "default_country",
      "label": "Default country display",
      "default": "Pakistan (USD $)",
      "info": "Displayed when localization is not available"
    }
  ],
  "presets": [
    {
      "name": "Header Utility Bar",
      "settings": {
        "show_social": true,
        "show_country": true,
        "default_country": "Pakistan (USD $)"
      }
    }
  ]
}
{% endschema %}