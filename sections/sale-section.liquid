{%- style -%}
  /* Sale Section Styles */
  .sale-section {
    width: 100%;
  }

  .sale-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }

  .sale-section-{{ section.id }} .page-width {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .sale-section-{{ section.id }}.full-width .page-width {
    max-width: 100%;
    padding: 0;
  }

  .sale-section-{{ section.id }} .sale-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ section.settings.gap_between }}px;
  }

  .sale-section-{{ section.id }} .sale-column {
    position: relative;
    overflow: hidden;
    display: flex;
    height: {{ section.settings.column_height_mobile }}px;
  }

  .sale-section-{{ section.id }} .sale-content {
    display: flex;
    width: 100%;
    height: 100%;
  }

  /* Text section - First column: 40%, Second column: 30% */
  .sale-section-{{ section.id }} .sale-text-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20px;
    text-align: center;
  }   
  

  /* First column: Text takes 40% */
  .sale-section-{{ section.id }} .sale-column-1 .sale-text-wrapper {
    flex: 0 0 40%;
  }

  /* Second column: Text takes 30% */
  .sale-section-{{ section.id }} .sale-column-2 .sale-text-wrapper {
    flex: 0 0 30%;
  }

  /* Images section */
  .sale-section-{{ section.id }} .sale-images-wrapper {
    display: flex;
    height: 100%;
  }

  /* First column: Images take 60% with padding */
  .sale-section-{{ section.id }} .sale-column-1 .sale-images-wrapper {
    flex: 0 0 60%;
    padding: {{ section.settings.image_padding_top }}px 0 {{ section.settings.image_padding_bottom }}px 0;
  }

  /* Second column: Images take 70% without padding */
  .sale-section-{{ section.id }} .sale-column-2 .sale-images-wrapper {
    flex: 0 0 70%;
  }

  /* Text styling for first column */
  .sale-section-{{ section.id }} .sale-column-1 .sale-main-text-1 {
    font-size: {{ section.settings.font_size_1_line1 }}px;
    font-weight: {{ section.settings.font_weight_1 }};
    letter-spacing: {{ section.settings.letter_spacing_1 }}px;
    text-transform: uppercase;
    line-height: 1.1;
    margin-bottom: {{ section.settings.space_between_lines_1 }}px;
    width: 100%;
  }

  .sale-section-{{ section.id }} .sale-column-1 .sale-percentage-1 {
    font-size: {{ section.settings.font_size_1_line2 }}px;
    font-weight: {{ section.settings.font_weight_1 }};
    letter-spacing: {{ section.settings.letter_spacing_1 }}px;
    line-height: 1;
    margin-bottom: {{ section.settings.space_between_lines_1 }}px;
    width: 100%;
  }

  .sale-section-{{ section.id }} .sale-column-1 .sale-subtext-1 {
    font-size: {{ section.settings.font_size_1_line3 }}px;
    font-weight: {{ section.settings.font_weight_1 }};
    letter-spacing: {{ section.settings.letter_spacing_1 }}px;
    text-transform: uppercase;
    line-height: 1.3;
    width: 100%;
  }

  /* Text styling for second column - CORRECTED */
  .sale-section-{{ section.id }} .sale-column-2 .sale-top-text-2 {
    font-size: {{ section.settings.font_size_2_line1 }}px;
    font-weight: {{ section.settings.font_weight_2 }};
    letter-spacing: {{ section.settings.letter_spacing_2 }}px;
    text-transform: uppercase;
    line-height: 1.1;
    margin-bottom: {{ section.settings.space_between_lines_2 }}px;
    width: 100%;
  }

  .sale-section-{{ section.id }} .sale-column-2 .sale-percentage-large-2 {
    font-size: {{ section.settings.font_size_2_line2 }}px;
    font-weight: {{ section.settings.font_weight_2 }};
    letter-spacing: {{ section.settings.letter_spacing_2 }}px;
    line-height: 1;
    margin-bottom: {{ section.settings.space_between_lines_2 }}px;
    width: 100%;
  }

  .sale-section-{{ section.id }} .sale-column-2 .sale-bottom-text-2 {
    font-size: {{ section.settings.font_size_2_line3 }}px;
    font-weight: {{ section.settings.font_weight_2 }};
    letter-spacing: {{ section.settings.letter_spacing_2 }}px;
    text-transform: uppercase;
    line-height: 1.3;
    width: 100%;
  }

  /* Images styling - Images are side by side with no gap and no hover effect */
  .sale-section-{{ section.id }} .sale-images {
    display: flex;
    width: 100%;
    height: 100%;
  }

  .sale-section-{{ section.id }} .sale-image-link {
    flex: 1;
    display: block;
    height: 100%;
  }

  .sale-section-{{ section.id }} .sale-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    object-position: center;
  }

  /* Responsive Styles */
  @media (min-width: 769px) {
    .sale-section-{{ section.id }} .sale-column {
      height: {{ section.settings.column_height_desktop }}px;
    }
  }

  @media (max-width: 768px) {
    .sale-section-{{ section.id }} .sale-container {
      grid-template-columns: 1fr;
      gap: 15px;
    }

    /* On mobile, keep the same inner layout but columns stack */
    .sale-section-{{ section.id }} .sale-column {
      height: {{ section.settings.column_height_mobile }}px;
      /* Keep the same flex layout inside */
    }

    /* Keep the same percentages on mobile */
    .sale-section-{{ section.id }} .sale-column-1 .sale-text-wrapper {
      flex: 0 0 40%;
    }

    .sale-section-{{ section.id }} .sale-column-1 .sale-images-wrapper {
      flex: 0 0 60%;
    }

    .sale-section-{{ section.id }} .sale-column-2 .sale-text-wrapper {
      flex: 0 0 30%;
    }

    .sale-section-{{ section.id }} .sale-column-2 .sale-images-wrapper {
      flex: 0 0 70%;
    }

    /* Adjust font sizes for mobile */
    .sale-section-{{ section.id }} .sale-column-1 .sale-main-text-1 {
      font-size: {{ section.settings.font_size_1_line1 | times: 0.7 | round }}px;
    }

    .sale-section-{{ section.id }} .sale-column-1 .sale-percentage-1 {
      font-size: {{ section.settings.font_size_1_line2 | times: 0.6 | round }}px;
    }

    .sale-section-{{ section.id }} .sale-column-1 .sale-subtext-1 {
      font-size: {{ section.settings.font_size_1_line3 | times: 0.8 | round }}px;
    }

    .sale-section-{{ section.id }} .sale-column-2 .sale-top-text-2 {
      font-size: {{ section.settings.font_size_2_line1 | times: 0.8 | round }}px;
    }

    .sale-section-{{ section.id }} .sale-column-2 .sale-percentage-large-2 {
      font-size: {{ section.settings.font_size_2_line2 | times: 0.6 | round }}px;
    }

    .sale-section-{{ section.id }} .sale-column-2 .sale-bottom-text-2 {
      font-size: {{ section.settings.font_size_2_line3 | times: 0.8 | round }}px;
    }
  }

  @media (max-width: 480px) {
    .sale-section-{{ section.id }} .sale-text-wrapper {
      padding: 15px;
    }

    .sale-section-{{ section.id }} .sale-column-1 .sale-main-text-1 {
      font-size: {{ section.settings.font_size_1_line1 | times: 0.6 | round }}px;
    }

    .sale-section-{{ section.id }} .sale-column-1 .sale-percentage-1 {
      font-size: {{ section.settings.font_size_1_line2 | times: 0.5 | round }}px;
    }

    .sale-section-{{ section.id }} .sale-column-1 .sale-subtext-1 {
      font-size: {{ section.settings.font_size_1_line3 | times: 0.7 | round }}px;
    }

    .sale-section-{{ section.id }} .sale-column-2 .sale-top-text-2 {
      font-size: {{ section.settings.font_size_2_line1 | times: 0.7 | round }}px;
    }

    .sale-section-{{ section.id }} .sale-column-2 .sale-percentage-large-2 {
      font-size: {{ section.settings.font_size_2_line2 | times: 0.5 | round }}px;
    }

    .sale-section-{{ section.id }} .sale-column-2 .sale-bottom-text-2 {
      font-size: {{ section.settings.font_size_2_line3 | times: 0.7 | round }}px;
    }
  }
{%- endstyle -%}

<div class="sale-section sale-section-{{ section.id }} {% if section.settings.full_width %}full-width{% endif %}">
  <div class="page-width">
    <div class="sale-container">
      <!-- First Column -->
      <div class="sale-column sale-column-1" style="background-color: {{ section.settings.bg_color_1 }};">
        <div class="sale-content">
          <!-- Text content for first column - Takes 40% -->
          <div class="sale-text-wrapper">
            <div class="sale-main-text-1" style="color: {{ section.settings.text_color_1 }};">
              {{ section.settings.text_1_line1 }}
            </div>
            <div class="sale-percentage-1" style="color: {{ section.settings.text_color_1 }};">
              {{ section.settings.text_1_line2 }}
            </div>
            <div class="sale-subtext-1" style="color: {{ section.settings.text_color_1 }};">
              {{ section.settings.text_1_line3 }}
            </div>
          </div>
          
          <!-- Images for first column - Takes 60% with padding -->
          <div class="sale-images-wrapper">
            <div class="sale-images">
              {% if section.settings.image_1_1 %}
                <a href="{{ section.settings.link_1_1 | default: '#' }}" class="sale-image-link">
                  {{ section.settings.image_1_1 | image_url: width: 600 | image_tag:
                    loading: 'lazy',
                    class: 'sale-image',
                    alt: section.settings.image_1_1.alt | escape
                  }}
                </a>
              {% endif %}
              
              {% if section.settings.image_1_2 %}
                <a href="{{ section.settings.link_1_2 | default: '#' }}" class="sale-image-link">
                  {{ section.settings.image_1_2 | image_url: width: 600 | image_tag:
                    loading: 'lazy',
                    class: 'sale-image',
                    alt: section.settings.image_1_2.alt | escape
                  }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>

      <!-- Second Column -->
      <div class="sale-column sale-column-2" style="background-color: {{ section.settings.bg_color_2 }};">
        <div class="sale-content">
          <!-- Text content for second column - Takes 30% -->
          <div class="sale-text-wrapper">
            <div class="sale-top-text-2" style="color: {{ section.settings.text_color_2 }};">
              {{ section.settings.text_2_line1 }}
            </div>
            <div class="sale-percentage-large-2" style="color: {{ section.settings.text_color_2 }};">
              {{ section.settings.text_2_line2 }}
            </div>
            <div class="sale-bottom-text-2" style="color: {{ section.settings.text_color_2 }};">
              {{ section.settings.text_2_line3 }}
            </div>
          </div>
          
          <!-- Images for second column - Takes 70% without padding -->
          <div class="sale-images-wrapper">
            <div class="sale-images">
              {% if section.settings.image_2_1 %}
                <a href="{{ section.settings.link_2_1 | default: '#' }}" class="sale-image-link">
                  {{ section.settings.image_2_1 | image_url: width: 600 | image_tag:
                    loading: 'lazy',
                    class: 'sale-image',
                    alt: section.settings.image_2_1.alt | escape
                  }}
                </a>
              {% endif %}
              
              {% if section.settings.image_2_2 %}
                <a href="{{ section.settings.link_2_2 | default: '#' }}" class="sale-image-link">
                  {{ section.settings.image_2_2 | image_url: width: 600 | image_tag:
                    loading: 'lazy',
                    class: 'sale-image',
                    alt: section.settings.image_2_2.alt | escape
                  }}
                </a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

