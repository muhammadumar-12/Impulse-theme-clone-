{{ 'sale-section.css' | asset_url | stylesheet_tag }}

<div
  class="sale-section {% if section.settings.full_width %}full-width{% endif %}"
  style="
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  "
>
  <div
    class="page-width"
    style="max-width: {{ section.settings.container_width }}px;"
  >
    <div
      class="sale-container"
      style="gap: {{ section.settings.gap_between }}px;"
    >

      <!-- Column 1 -->
      <div
        class="sale-column sale-column-1"
        style="
          background-color: {{ section.settings.bg_color_1 }};
          height: {{ section.settings.column_height_desktop }}px;
        "
      >
        <div class="sale-content">
          <div class="sale-text-wrapper" style="color: {{ section.settings.text_color_1 }};">
            <div style="font-size: {{ section.settings.font_size_1_line1 }}px;">
              {{ section.settings.text_1_line1 }}
            </div>
            <div style="font-size: {{ section.settings.font_size_1_line2 }}px;">
              {{ section.settings.text_1_line2 }}
            </div>
            <div style="font-size: {{ section.settings.font_size_1_line3 }}px;">
              {{ section.settings.text_1_line3 }}
            </div>
          </div>

          <div
            class="sale-images-wrapper"
            style="padding: {{ section.settings.image_padding_top }}px 0 {{ section.settings.image_padding_bottom }}px;"
          >
            <div class="sale-images">
              {% assign images_1 = 'image_1_1,image_1_2' | split: ',' %}
              {% for img in images_1 %}
                {% assign image = section.settings[img] %}
                {% if image %}
                  <a class="sale-image-link" href="#">
                    {{ image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'sale-image' }}
                  </a>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>

      <!-- Column 2 -->
      <div
        class="sale-column sale-column-2"
        style="
          background-color: {{ section.settings.bg_color_2 }};
          height: {{ section.settings.column_height_desktop }}px;
        "
      >
        <div class="sale-content">
          <div class="sale-text-wrapper" style="color: {{ section.settings.text_color_2 }};">
            <div style="font-size: {{ section.settings.font_size_2_line1 }}px;">
              {{ section.settings.text_2_line1 }}
            </div>
            <div style="font-size: {{ section.settings.font_size_2_line2 }}px;">
              {{ section.settings.text_2_line2 }}
            </div>
            <div style="font-size: {{ section.settings.font_size_2_line3 }}px;">
              {{ section.settings.text_2_line3 }}
            </div>
          </div>

          <div class="sale-images-wrapper">
            <div class="sale-images">
              {% assign images_2 = 'image_2_1,image_2_2' | split: ',' %}
              {% for img in images_2 %}
                {% assign image = section.settings[img] %}
                {% if image %}
                  <a class="sale-image-link" href="#">
                    {{ image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'sale-image' }}
                  </a>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
